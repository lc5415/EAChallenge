OperatingSystem := $(shell uname)
ifeq ($(OperatingSystem), Darwin)
	LibSDL := -framework SDL2
else
	LibSDL := -lSDL2
endif

all:
	cc -std=c++11  DiceInvaders.cpp Engine.cpp $(LibSDL) -I/Library/Frameworks/SDL2.framework/Headers -F/Library/Frameworks -fno-exceptions -o DiceInvaders

clean:
	-rm DiceInvaders

